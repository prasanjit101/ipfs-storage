<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <link rel="shortcut icon" href="images/favicon.png">
  <title>IPFS & BSC Storage | File Info</title>
</head>
<body>

<div class = "row mt-3">
  <div class = "col-12 d-flex flex-column align-items-center justify-content center my-3">
    <h1 class = "text-center text-light">File Info</h1>
    <a href="/"><button class = "btn mt-2 link-button">Back to main</button></a>
  </div>
</div>

<div class="container">
  <div class = "row mt-3 d-flex justify-content-center align-item-center">

    <!--Single file info section -->
    <% if (ownersFiles.length === 0) { %> 
    <div class = "col-12 d-flex align-items-center justify-content-center mt-5">
      <h1 class = "display-4 text-light">Owner don't have any file. </h1>
    </div>
    <% } %>

    <% ownersFiles.forEach(function(ownersFile) { %> 
      <div class = "col-lg-6 col-sm-12 my-3">
        <ul class = "list-group">
          <li class = "list-group-item d-flex justify-content-between align-items-center">
            <h6>File ID</h6>
            <span class = "badge bg-dark"><%= ownersFile.fileID  %> </span>      
          </li>
          <li class = "list-group-item d-flex justify-content-between align-items-center">
            <h6>File Name</h6>
            <span class = "badge bg-dark"><%= ownersFile.fileName %> </span>      
          </li>
          <li class = "list-group-item d-flex justify-content-between align-items-center">
            <h6>File Owner</h6>
            <span class = "badge bg-dark"><%= ownersFile.fileOwner %></span>      
          </li>
          <li class = "list-group-item d-flex justify-content-between align-items-center">
            <h6>File Hash</h6>
            <span class = "badge bg-dark"><%= ownersFile.fileHash %></span>      
          </li>
          <li class = "list-group-item d-flex justify-content-between align-items-center">
            <h6>File Link</h6>
            <a href="https://ipfs.io/ipfs/<%= ownersFile.fileHash %>" target="_blank"><span class = "badge bg-dark">Open File</span></a>      
          </li>
        </ul>
      </div>
    <% }) %>
  </div>
</div>
  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script> 
</body>
</html>